@model TextRepeat.Models.Repeat

@{
    ViewData["Title"] = "TextRepeat";
}

<h1>@ViewData["Title"]</h1>

<form method="post" asp-action="TextRepeat">
    <div class="form-group">
        <label for="Tekst">Tekst</label>
        <input type="text" id="Tekst" name="Tekst" required />
    </div>

    <div class="form-group">
        <label for="Antal">Antal</label>
        <input type="number" id="Antal" name="Antal" min="1" max="10" required />
    </div>

    <div class="form-check">
        <input type="checkbox" id="Mellemrum" name="Mellemrum" />
        <label for="Mellemrum">Mellemrum</label>
    </div>

    <button type="submit" class="btn btn-primary">Send</button>
</form>


@if (Model != null && Model.Result != null)
{
    <h3>Result:</h3>
    <p>@Model.Result</p>
}